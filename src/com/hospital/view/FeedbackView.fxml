<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hospital.controller.FeedbackController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Patient Feedback" styleClass="header-label">
        <font>
            <Font size="20"/>
        </font>
    </Label>

    <HBox spacing="10">
        <Button text="Submit Feedback" onAction="#handleAddFeedback"/>
    </HBox>

    <TableView fx:id="feedbackTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="patientIdColumn" text="Patient ID" prefWidth="80"/>
            <TableColumn fx:id="ratingColumn" text="Rating" prefWidth="60"/>
            <TableColumn fx:id="commentsColumn" text="Comments" prefWidth="300"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
        </columns>
        <placeholder>
            <Label text="No feedback loaded (Admin Only)"/>
        </placeholder>
    </TableView>

</VBox>
