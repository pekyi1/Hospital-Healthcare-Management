<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hospital.controller.DashboardController"
      spacing="20.0"
      style="-fx-background-color: #f4f4f4;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <Label text="Hospital Overview" styleClass="header-label">
        <font>
            <Font size="28.0"/>
        </font>
    </Label>

    <!-- Stats Cards Container -->
    <HBox spacing="20.0" alignment="CENTER_LEFT">
        <!-- Patient Count Card -->
        <VBox style="-fx-background-color: #1abc9c; -fx-background-radius: 10; -fx-padding: 20;" prefWidth="200" prefHeight="120">
            <Label text="Total Patients" textFill="white">
                 <font><Font size="16.0"/></font>
            </Label>
            <Label fx:id="patientCountLabel" text="0" textFill="white" style="-fx-font-weight: bold;">
                 <font><Font size="36.0"/></font>
            </Label>
        </VBox>

        <!-- Doctor Count Card -->
        <VBox style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-padding: 20;" prefWidth="200" prefHeight="120">
            <Label text="Active Doctors" textFill="white">
                 <font><Font size="16.0"/></font>
            </Label>
            <Label fx:id="doctorCountLabel" text="0" textFill="white" style="-fx-font-weight: bold;">
                 <font><Font size="36.0"/></font>
            </Label>
        </VBox>

        <!-- Appointment Count Card -->
        <VBox style="-fx-background-color: #e67e22; -fx-background-radius: 10; -fx-padding: 20;" prefWidth="200" prefHeight="120">
            <Label text="Appointments" textFill="white">
                 <font><Font size="16.0"/></font>
            </Label>
            <Label fx:id="appointmentCountLabel" text="0" textFill="white" style="-fx-font-weight: bold;">
                 <font><Font size="36.0"/></font>
            </Label>
        </VBox>
    </HBox>

    <Separator/>

    <!-- Quick Actions -->
    <Label text="Quick Actions" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>

    <FlowPane hgap="15" vgap="15">
        <Button text="Register Patient" onAction="#goToPatients" prefWidth="150" prefHeight="40" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-border-color: #bdc3c7; -fx-background-radius: 5;"/>
        <Button text="Schedule Appointment" onAction="#goToAppointments" prefWidth="170" prefHeight="40" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-border-color: #bdc3c7; -fx-background-radius: 5;"/>
        <Button text="New Prescription" onAction="#goToPrescriptions" prefWidth="150" prefHeight="40" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-border-color: #bdc3c7; -fx-background-radius: 5;"/>
    </FlowPane>
    
    <Label text="Use the menu bar above for specialized reports and feedback." style="-fx-text-fill: #95a5a6; -fx-font-style: italic; -fx-padding: 20 0 0 0;"/>

</VBox>
