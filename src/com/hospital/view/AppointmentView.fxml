<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hospital.controller.AppointmentController"
      spacing="10.0">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Appointment Scheduling" styleClass="header-label">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    <TableView fx:id="appointmentTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50.0"/>
            <TableColumn fx:id="colPatientId" text="Patient ID" prefWidth="80.0"/>
            <TableColumn fx:id="colDoctorId" text="Doctor ID" prefWidth="80.0"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="150.0"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0"/>
            <TableColumn fx:id="colNotes" text="Notes" prefWidth="200.0"/>
        </columns>
    </TableView>

    <TitledPane text="Schedule Appointment" collapsible="false">
        <GridPane hgap="10" vgap="10">
            <Label text="Patient ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="patientIdField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Doctor ID:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="doctorIdField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            
            <Label text="Date (YYYY-MM-DDTHH:MM):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="dateField" promptText="2023-10-27T10:00" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="Notes:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <TextField fx:id="notesField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            
            <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>
    </TitledPane>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Schedule" onAction="#handleScheduleAppointment"/>
        <Button text="Refresh" onAction="#handleRefresh"/>
    </HBox>

</VBox>
