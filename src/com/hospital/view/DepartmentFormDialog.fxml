<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hospital.controller.DepartmentFormDialogController"
      spacing="15"
      style="-fx-background-color: white; -fx-padding: 20;">

    <!-- Title -->
    <Label fx:id="titleLabel" text="Add Department" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Form Fields -->
    <GridPane hgap="15" vgap="15">
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" promptText="e.g., Cardiology" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="locationField" promptText="e.g., Building A, Floor 1" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        <Button text="Save" onAction="#handleSave" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

</VBox>
