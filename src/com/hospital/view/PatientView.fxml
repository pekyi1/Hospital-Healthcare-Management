<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hospital.controller.PatientController"
      spacing="20.0"
      style="-fx-background-color: #f4f6f8; -fx-padding: 30;">

    <!-- Top Header -->
    <HBox alignment="CENTER_LEFT">
        <Label text="Patients" styleClass="header-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="View all â†’" style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-cursor: hand; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Main Card Container -->
    <VBox styleClass="card" spacing="20.0" VBox.vgrow="ALWAYS">
        
        <!-- Controls Bar -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <!-- Search -->
            <HBox alignment="CENTER_LEFT" styleClass="search-field" prefWidth="300">
                <Label text="ðŸ”" textFill="#9ca3af" style="-fx-font-size: 14px; -fx-padding: 0 5 0 0;"/>
                <TextField fx:id="searchField" promptText="Search" HBox.hgrow="ALWAYS" onAction="#handleSearch"/>
            </HBox>

            <Button text="Filters" styleClass="action-button"/> 
            <Button text="Refresh" onAction="#handleRefresh" styleClass="action-button"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Button text="+ Add patient" onAction="#handleAddPatient" styleClass="button-primary"/>
            
            <ComboBox promptText="Newest to oldest" styleClass="combo-box"/>
        </HBox>

        <!-- Table -->
        <TableView fx:id="patientTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colSelect" prefWidth="40.0" resizable="false"/> <!-- Placeholder for checkbox -->
                <TableColumn fx:id="colFirstName" text="First Name" prefWidth="120.0"/>
                <TableColumn fx:id="colLastName" text="Last Name" prefWidth="120.0"/>
                <TableColumn fx:id="colId" text="Identification no." prefWidth="120.0"/>
                <TableColumn fx:id="colDOB" text="Last visit" prefWidth="120.0"/> <!-- Using DOB as placeholder for "Last Visit" for now to match image header -->
                <TableColumn fx:id="colGender" text="Status" prefWidth="100.0"/> <!-- Using Gender as Status placeholder -->
                <TableColumn fx:id="colEmail" text="Allergies" prefWidth="150.0"/> <!-- Email as dummy -->
                <TableColumn fx:id="colPhone" text="Doctor" prefWidth="120.0"/> <!-- Phone as dummy -->
                <TableColumn text="Actions" prefWidth="60.0"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

    </VBox>
    
    <!-- Form Area (kept at bottom for functional parity, but collapsible or styled simpler) -->
    <TitledPane text="Quick Add / Edit Patient" expanded="false" style="-fx-background-color: transparent;">
        <GridPane hgap="15" vgap="15" style="-fx-padding: 15;">
            <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Last Name:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="lastNameField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            
            <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="genderField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="DOB:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <DatePicker fx:id="dobField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <Label text="Phone:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            
            <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3"/>
            
            <HBox spacing="10" GridPane.columnIndex="3" GridPane.rowIndex="3" alignment="BOTTOM_RIGHT">
                <Button text="Save" onAction="#handleUpdatePatient" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                <Button text="Clear" onAction="#handleClear"/>
            </HBox>
        </GridPane>
    </TitledPane>

</VBox>
