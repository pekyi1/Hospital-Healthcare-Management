<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hospital.controller.PatientController"
      spacing="10.0">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search Patient..." prefWidth="250.0"/>
        <Button text="Search" onAction="#handleSearch"/>
        <Button text="Refresh" onAction="#handleRefresh"/>
    </HBox>

    <TableView fx:id="patientTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50.0"/>
            <TableColumn fx:id="colFirstName" text="First Name" prefWidth="100.0"/>
            <TableColumn fx:id="colLastName" text="Last Name" prefWidth="100.0"/>
            <TableColumn fx:id="colGender" text="Gender" prefWidth="70.0"/>
            <TableColumn fx:id="colDOB" text="Date of Birth" prefWidth="100.0"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="150.0"/>
            <TableColumn fx:id="colPhone" text="Phone" prefWidth="100.0"/>
        </columns>
    </TableView>

    <Label text="Patient Registration System" styleClass="header-label">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>

    <TitledPane text="Patient Details" collapsible="false">
        <GridPane hgap="10" vgap="10">
            <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Last Name:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="lastNameField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            
            <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="genderField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Label text="DOB (YYYY-MM-DD):" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <DatePicker fx:id="dobField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <Label text="Phone:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            
            <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3"/>
        </GridPane>
    </TitledPane>

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Add Patient" onAction="#handleAddPatient"/>
        <Button text="Update Patient" onAction="#handleUpdatePatient"/>
        <Button text="Clear" onAction="#handleClear"/>
        <Button text="Delete Patient" onAction="#handleDeletePatient"/>
    </HBox>

</VBox>
