<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hospital.controller.PatientController"
      spacing="20.0"
      style="-fx-background-color: #f4f6f8; -fx-padding: 30;">

    <!-- Top Header -->
    <HBox alignment="CENTER_LEFT">
        <Label text="Patients" styleClass="header-label"/>
    </HBox>

    <!-- Main Card Container -->
    <VBox styleClass="card" spacing="20.0" VBox.vgrow="ALWAYS">
        
        <!-- Controls Bar -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <!-- Search -->
            <HBox alignment="CENTER_LEFT" styleClass="search-field" prefWidth="300">
                <Label text="ðŸ”" textFill="#9ca3af" style="-fx-font-size: 14px; -fx-padding: 0 5 0 0;"/>
                <TextField fx:id="searchField" promptText="Search" HBox.hgrow="ALWAYS" onAction="#handleSearch"/>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Button text="ðŸ“„ Notes" onAction="#handleViewNotes" styleClass="button-secondary"/>
            <Button text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="button-secondary"/>
            <Button text="+ Add patient" onAction="#handleAddPatient" styleClass="button-primary"/>
        </HBox>

        <!-- Table -->
        <TableView fx:id="patientTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60.0"/>
                <TableColumn fx:id="colFirstName" text="First Name" prefWidth="100.0"/>
                <TableColumn fx:id="colLastName" text="Last Name" prefWidth="100.0"/>
                <TableColumn fx:id="colGender" text="Gender" prefWidth="80.0"/>
                <TableColumn fx:id="colDOB" text="Birth Date" prefWidth="100.0"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="150.0"/>
                <TableColumn fx:id="colPhone" text="Phone" prefWidth="120.0"/>
                <TableColumn fx:id="colAddress" text="Address" prefWidth="150.0"/>
                <TableColumn fx:id="colCreatedAt" text="Created At" prefWidth="140.0"/>
                <TableColumn fx:id="colActions" text="Edit" prefWidth="120.0"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

    </VBox>

</VBox>
