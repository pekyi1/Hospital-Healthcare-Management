<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hospital.controller.DoctorFormDialogController"
      spacing="15"
      style="-fx-background-color: white; -fx-padding: 20;">

    <!-- Title -->
    <Label fx:id="titleLabel" text="Add Doctor" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Form Fields -->
    <GridPane hgap="15" vgap="15">
        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="firstNameField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="lastNameField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Specialization:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="specializationField" promptText="e.g., Cardiologist" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Department:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="departmentComboBox" promptText="Select Department" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="emailField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="phoneField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <Label text="Created Date:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <DatePicker fx:id="createdDateField" promptText="Select Date" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        <Button text="Save" onAction="#handleSave" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

</VBox>
