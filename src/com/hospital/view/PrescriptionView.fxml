<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hospital.controller.PrescriptionController"
      spacing="20.0"
      style="-fx-background-color: #f4f6f8; -fx-padding: 30;">

    <!-- Top Header -->
    <HBox alignment="CENTER_LEFT">
        <Label text="Prescriptions" styleClass="header-label"/>
    </HBox>

    <!-- Main Card Container -->
    <VBox styleClass="card" spacing="20.0" VBox.vgrow="ALWAYS">
        
        <!-- Controls Bar -->
        <HBox fx:id="controlsBar" spacing="15" alignment="CENTER_LEFT">
            <!-- Search -->
            <HBox alignment="CENTER_LEFT" styleClass="search-field" prefWidth="300">
                <Label text="ðŸ”" textFill="#9ca3af" style="-fx-font-size: 14px; -fx-padding: 0 5 0 0;"/>
                <TextField fx:id="searchField" promptText="Search by patient or medicine" HBox.hgrow="ALWAYS" onAction="#handleSearch"/>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Button fx:id="btnAddPrescription" text="+ Add Prescription" onAction="#handleAddPrescription" styleClass="button-primary"/>
        </HBox>

        <!-- Table -->
        <TableView fx:id="prescriptionTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colPatientName" text="Patient" prefWidth="130.0"/>
                <TableColumn fx:id="colDoctorName" text="Doctor" prefWidth="130.0"/>
                <TableColumn fx:id="colMedicine" text="Medicine" prefWidth="130.0"/>
                <TableColumn fx:id="colQuantity" text="Qty" prefWidth="60.0"/>
                <TableColumn fx:id="colDosage" text="Dosage Instructions" prefWidth="200.0"/>
                <TableColumn fx:id="colDate" text="Date" prefWidth="120.0"/>
                <TableColumn fx:id="colActions" text="Edit" prefWidth="100.0"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

    </VBox>

</VBox>
